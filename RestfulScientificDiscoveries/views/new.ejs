<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">
            New Discovery
        </div>
        <form class="ui form" action="/discoveries" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="discovery[title]" placeholder="Gravity" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="discovery[image]" placeholder="image URL" required>
            </div>
            <div class="field">
                <label>Discoverer</label>
                <input type="text" name="discovery[discoverer]" placeholder="Sir. Isac Newton" required>
            </div>
            <div class="field">
                <label>Year Discovered</label>
                <input type="text" name="discovery[yearDiscovered]" placeholder="1686" required>
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="discovery[description]" required></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>
<% include ./partials/footer %>