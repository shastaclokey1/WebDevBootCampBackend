<% include ./partials/header %>
    <div class="ui main text container segment">
        <div class="ui huge header">
            Update Discovery
        </div>
        <form class="ui form" action="/discoveries/<%= discovery._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="discovery[title]" value="<%= discovery.title %>" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="discovery[image]" value="<%= discovery.image %>" required>
            </div>
            <div class="field">
                <label>Discoverer</label>
                <input type="text" name="discovery[discoverer]" value="<%= discovery.discoverer %>" required>
            </div>
            <div class="field">
                <label>Year Discovered</label>
                <input type="text" name="discovery[yearDiscovered]" value="<%= discovery.yearDiscovered %>" required>
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="discovery[description]" required><%= discovery.description %></textarea>
            </div>
            <input class="ui violet big basic button" type="submit">
        </form>
    </div>
<% include ./partials/footer %>