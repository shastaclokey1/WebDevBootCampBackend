<% include ./partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached">
        <div class="ui divided items">
            <% blogs.forEach(function(blog) { %>
                <div class="item">
                    <div class="content">
                        <div class ="ui centered rounded image">
                            <img src="<%= blog.image %>">
                        </div>
                        <div>
                            <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                        </div>
                        <div class="meta">
                            <div><%= blog.created.toDateString() %></div>
                        </div>
                        <div class="description">
                            <p><%- blog.body.substring(0, 100) %>...</p>
                        </div>
                        <div class="extra">
                            <a class="ui blue basic button" href="/blogs/<%= blog._id %>">
                                Read More
                                <i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</div>

<% include ./partials/footer %>